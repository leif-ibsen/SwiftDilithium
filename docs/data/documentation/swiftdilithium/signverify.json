{"identifier":{"url":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/SignVerify","interfaceLanguage":"swift"},"hierarchy":{"paths":[["doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium"]]},"schemaVersion":{"minor":3,"patch":0,"major":0},"metadata":{"modules":[{"name":"SwiftDilithium"}],"roleHeading":"Article","role":"article","title":"Sign and Verify"},"sections":[],"variants":[{"traits":[{"interfaceLanguage":"swift"}],"paths":["\/documentation\/swiftdilithium\/signverify"]}],"primaryContentSections":[{"content":[{"anchor":"","text":"","level":2,"type":"heading"},{"type":"paragraph","inlineContent":[{"type":"text","text":"Messages are signed by secret keys and signatures are verified by public keys."},{"text":" ","type":"text"},{"type":"text","text":"Signatures can be deterministic or randomized and optionally a hash of the message can be signed"},{"text":" ","type":"text"},{"text":"instead of the message itself.","type":"text"}]},{"anchor":"Example","type":"heading","level":3,"text":"Example"},{"type":"codeListing","code":["import SwiftDilithium","","\/\/ Create keys","","let (secretKey, publicKey) = Dilithium.GenerateKeyPair(kind: .ML_DSA_44)","","\/\/ Deterministic signature","let deterministicSig = secretKey.Sign(message: [1, 2, 3], randomize: false)","print(\"Deterministic:\", publicKey.Verify(message: [1, 2, 3], signature: deterministicSig))","","\/\/ Randomized signature","let randomizedSig = secretKey.Sign(message: [1, 2, 3], randomize: true)","print(\"Randomized:\", publicKey.Verify(message: [1, 2, 3], signature: randomizedSig))","","\/\/ Prehashed signature","let prehashedSig = secretKey.Sign(message: [1, 2, 3], ph: .SHAKE128)","print(\"Prehashed:\", publicKey.Verify(message: [1, 2, 3], signature: prehashedSig, ph: .SHAKE128))"],"syntax":"swift"},{"inlineContent":[{"type":"text","text":"giving:"}],"type":"paragraph"},{"code":["Deterministic: true","Randomized: true","Prehashed: true"],"type":"codeListing","syntax":null}],"kind":"content"}],"kind":"article","seeAlsoSections":[{"title":"Additional Information","identifiers":["doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/KeyManagement","doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/OIDs","doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/Performance","doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/References"],"generated":true,"anchor":"Additional-Information"}],"references":{"doc://SwiftDilithium/documentation/SwiftDilithium/OIDs":{"title":"ASN1 OIDs","url":"\/documentation\/swiftdilithium\/oids","identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/OIDs","role":"article","kind":"article","abstract":[],"type":"topic"},"doc://SwiftDilithium/documentation/SwiftDilithium/References":{"kind":"article","url":"\/documentation\/swiftdilithium\/references","abstract":[],"identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/References","type":"topic","title":"References","role":"article"},"doc://SwiftDilithium/documentation/SwiftDilithium/Performance":{"identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/Performance","url":"\/documentation\/swiftdilithium\/performance","type":"topic","role":"article","kind":"article","title":"Performance","abstract":[]},"doc://SwiftDilithium/documentation/SwiftDilithium":{"kind":"symbol","role":"collection","identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium","type":"topic","abstract":[{"text":"Module-Lattice-Based Digital Signature Standard","type":"text"}],"title":"SwiftDilithium","url":"\/documentation\/swiftdilithium"},"doc://SwiftDilithium/documentation/SwiftDilithium/KeyManagement":{"url":"\/documentation\/swiftdilithium\/keymanagement","identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/KeyManagement","abstract":[],"role":"article","type":"topic","title":"Key Management","kind":"article"}}}