lse)","print(\"Deterministic:\", publicKey.Verify(message: [1, 2, 3], signature: deterministicSig))","","\/\/ Randomized signature","let randomizedSig = secretKey.Sign(message: [1, 2, 3], randomize: true)","print(\"Randomized:\", publicKey.Verify(message: [1, 2, 3], signature: randomizedSig))","","\/\/ Prehashed signature","let prehashedSig = secretKey.Sign(message: [1, 2, 3], ph: .SHAKE128)","print(\"Prehashed:\", publicKey.Verify(message: [1, 2, 3], signature: prehashedSig, ph: .SHAKE128))"],"syntax":"swift","type":"codeListing"},{"type":"paragraph","inlineContent":[{"type":"text","text":"giving:"}]},{"type":"codeListing","code":["Deterministic: true","Randomized: true","Prehashed: true"],"syntax":null}]}],"metadata":{"roleHeading":"Article","title":"Sign and Verify","role":"article","modules":[{"name":"SwiftDilithium"}]},"sections":[],"kind":"article","references":{"doc://SwiftDilithium/documentation/SwiftDilithium/KeyManagement":{"title":"Key Management","url":"\/documentation\/swiftdilithium\/keymanagement","abstract":[],"type":"topic","role":"article","kind":"article","identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/KeyManagement"},"doc://SwiftDilithium/documentation/SwiftDilithium/References":{"abstract":[],"role":"article","kind":"article","url":"\/documentation\/swiftdilithium\/references","identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/References","title":"References","type":"topic"},"doc://SwiftDilithium/documentation/SwiftDilithium/Performance":{"role":"article","type":"topic","identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/Performance","title":"Performance","kind":"article","url":"\/documentation\/swiftdilithium\/performance","abstract":[]},"doc://SwiftDilithium/documentation/SwiftDilithium/OIDs":{"title":"ASN1 OIDs","url":"\/documentation\/swiftdilithium\/oids","abstract":[],"type":"topic","role":"article","kind":"article","identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/