tKey, publicKey) = Dilithium.GenerateKeyPair(kind: .ML_DSA_44)","","\/\/ Deterministic signature","let deterministicSig = secretKey.Sign(message: [1, 2, 3], randomize: false)","print(\"Deterministic:\", publicKey.Verify(message: [1, 2, 3], signature: deterministicSig))","","\/\/ Randomized signature","let randomizedSig = secretKey.Sign(message: [1, 2, 3], randomize: true)","print(\"Randomized:\", publicKey.Verify(message: [1, 2, 3], signature: randomizedSig))","","\/\/ Prehashed signature","let prehashedSig = secretKey.Sign(message: [1, 2, 3], ph: .SHAKE128)","print(\"Prehashed:\", publicKey.Verify(message: [1, 2, 3], signature: prehashedSig, ph: .SHAKE128))"]},{"inlineContent":[{"text":"giving:","type":"text"}],"type":"paragraph"},{"syntax":null,"code":["Deterministic: true","Randomized: true","Prehashed: true"],"type":"codeListing"}]}],"kind":"article","references":{"doc://SwiftDilithium/documentation/SwiftDilithium":{"title":"SwiftDilithium","role":"collection","abstract":[{"text":"Module-Lattice-Based Digital Signature Standard","type":"text"}],"identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium","kind":"symbol","type":"topic","url":"\/documentation\/swiftdilithium"},"doc://SwiftDilithium/documentation/SwiftDilithium/KeyManagement":{"type":"topic","abstract":[],"role":"article","url":"\/documentation\/swiftdilithium\/keymanagement","identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/KeyManagement","kind":"article","title":"Key Management"},"doc://SwiftDilithium/documentation/SwiftDilithium/Performance":{"abstract":[],"kind":"article","type":"topic","identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/Performance","title":"Performance","url":"\/documentation\/swiftdilithium\/performance","role":"article"},"doc://SwiftDilithium/documentation/SwiftDilithium/OIDs":{"kind":"article","identifier":"doc:\/\/SwiftDilithium\/documentation\/SwiftDilithium\/OIDs","title":"ASN1 OIDs","role":"article","abstract":[],"type":"topi